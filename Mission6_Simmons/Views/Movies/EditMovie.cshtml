@model MovieModel

<h2>Edit Movie</h2>

<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <div class="form-group">
        <label asp-for="@Model.Title">Title</label>
        <input asp-for="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" class="form-control">
            <option value="1">Miscellaneous</option>
            <option value="2">Drama</option>
            <option value="3">Television</option>
            <option value="4">Horror/Suspense</option>
            <option value="5">Comedy</option>
            <option value="6">Family</option>
            <option value="7">Action/Adventure</option>
            <option value="8">VHS</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.Year">Year</label>
        <input asp-for="@Model.Year" class="form-control" required type="number" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.Director">Director</label>
        <input asp-for="@Model.Director" class="form-control" required />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.Rating">Rating</label>
        <select asp-for="@Model.Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.Edited">Edited</label>
        <select asp-for="@Model.Edited" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.LentTo">Lent To (Optional)</label>
        <input asp-for="@Model.LentTo" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.Notes">Notes (Optional)</label>
        <input asp-for="@Model.Notes" class="form-control" maxlength="25" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
